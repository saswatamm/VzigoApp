<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subscription"
    android:orientation="vertical"
    android:background="@color/signupback">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/homepage_header"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/onBackPressed"
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/vzigo_logo_subs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_semibold"
                android:gravity="center_horizontal"
                android:text="VZIGO"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@id/belowText"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/subscription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/belowText"
        android:layout_above="@id/bottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Premium Subscription is over"
            android:gravity="center_horizontal"
            android:fontFamily="@font/inter_bold"
            android:textColor="#171717"
            android:textSize="32sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please log in to the console to renew your Subscription."
            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semibold"
            android:textColor="#707070"
            android:textSize="24sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rad16_primarybtn_darkish"
        android:paddingTop="19dp"
        android:paddingBottom="19dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Login to Console"
            android:textColor="@color/white"
            android:textSize="24sp" />


    </LinearLayout>




</RelativeLayout>