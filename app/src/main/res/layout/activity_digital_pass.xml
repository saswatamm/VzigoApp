<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DigitalPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="@drawable/homepage_header"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Digital Pass"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-85dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rad16_whiteback"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            >


            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:layout_marginLeft="8dp"
                android:src="@drawable/company_logo"
                android:visibility="visible"


                />

            <TextView
                android:id="@+id/companyname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="14dp"
                android:layout_marginTop="50dp"
                android:letterSpacing="0.20"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="BANK OF AMERICA"
                android:textColor="#18005B"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/powered_by_back"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Powered by"
                android:textColor="#6146C6"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/logo_back"
                android:padding="3dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/jost_semibold"
                android:text="VIZGO"
                android:textColor="#6146C6"
                android:textSize="10.58sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5240A6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Visitor"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clipToOutline="true"
                android:id="@+id/userPic"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_outline"
                android:layout_marginLeft="30dp"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                />
            <!--android:background="@drawable/rounded_outline"-->
            <!--android:background="@drawable/ic_launcher_background"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeTextType="uniform"
                    android:text="Jonas Hayden"
                    android:textSize="20sp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/inter_semibold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    >

                    <ImageView
                        android:layout_width="16.67dp"
                        android:layout_height="16.67dp"
                        android:src="@drawable/phone"/>
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-2dp"
                        android:text="+91 7609834456"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="#707070"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"

                    >

                    <ImageView
                        android:layout_width="16.67dp"
                        android:layout_height="16.67dp"
                        android:src="@drawable/time"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-2dp"
                        android:text="19.01.21"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="#707070"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#C4C4C4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-2dp"
                        android:text="10.30 PM"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="#707070"/>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/qr_code_pass"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="-5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/scan"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan QR on Mobile"
                    android:textSize="16sp"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/primary_btn"
                    android:fontFamily="@font/inter_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Scan via Google lens\nor any QR Scanner"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#979797"
                    android:textSize="12sp"/>



            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rad16_primarybtn_darkish"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="PRINT"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/close"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:gravity="center_horizontal"
            android:textColor="@color/primary_btn"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    </LinearLayout>


</ScrollView>